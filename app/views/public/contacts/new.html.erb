<div class="container-fluid light-blue-container p-5">
  <div class="row">
    <div class="col-md-8 offset-md-2">
    
    <div class="mb-2">
      <%= flash[:alert] %>
    </div>
    <div id="contact_form">
      <%= form_with model: [:public, @contact], url: confirm_public_contacts_path, local: false do |f| %>
        <div class="form-group">
          <%= f.label :name, 'お名前' %><span class="text-danger">*</span>
          <%= f.text_field :name, autofocus: true, class: 'w-full bg-transparent border-b-2 border-gray-400 focus:border-purple-500 outline-none p-2 form-control' %>
        </div>
        
        <div class="form-group">
          <%= f.label :email, 'メールアドレス' %><span class="text-danger">*</span>
          <%= f.email_field :email, class: 'w-full bg-transparent border-b-2 border-gray-400 focus:border-purple-500 outline-none p-2 form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :subject, '件名' %><span class="text-danger">*</span>
          <%= f.text_field :subject, class: 'w-full bg-transparent border-b-2 border-gray-400 focus:border-purple-500 outline-none p-2 form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :message, 'メッセージ' %><span class="text-danger">*</span>
          <%= f.text_area :message, size: '10x10', class: 'w-full bg-transparent border-2 border-gray-400 focus:border-purple-500 outline-none p-2 form-control' %>
        </div>

        <div>
          <%= f.submit '入力内容確認', class: "mt-2 btn btn-outline-info bg-white" %>
        </div>
      <% end %>
    </div>
    </div>
  </div>
</div>