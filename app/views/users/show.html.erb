<div class="font-serif flex items-center justify-center px-4 md:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <div class="rounded-lg shadow-xl overflow-hidden">
      <div class="px-4 py-5 sm:p-6">
        <h1 class="text-center text-4xl font-bold text-amber-800 mb-6 font-serif">情報</h1>
        <div class="bg-amber-50 p-6 rounded-md shadow-inner">
          <p class="mb-8 border-b-2 border-amber-700">
            <span class="md:text-2xl text-xl font-bold text-amber-900">名前:</span>
            <span class="md:text-2xl text-xl text-amber-800"><%= @user.name %></span>
          </p>
          <% unless line_login_user?(@user) %>
            <p class="border-b-2 border-amber-700">
              <span class="md:text-2xl text-xl font-bold text-amber-900">魔法の連絡先:</span>
              <span class="md:text-2xl text-xl text-amber-800"><%= @user.email %></span>
            </p>
            <p class="mt-12 text-center">
              <%= link_to "秘密の呪文の変更", new_password_reset_path, class: "text-purple-600 hover:underline" %>
            </p>
          <% end %>
          <div class="mt-12">
            <h2 class="text-2xl font-bold text-amber-900 mb-4">獲得した単語</h2>
            <div class="grid grid-cols-5 gap-4">
              <% ['悲しい', '嬉しい', 'たまご', 'ラーメン', '杖'].each do |word| %>
                <div class="text-center">
                  <% if @user.special_character_list.include?(word) %>
                    <%= word %>
                  <% else %>
                    <span class="text-gray-300">⚫️</span>
                  <% end %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>