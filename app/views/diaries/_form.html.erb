<%= form_with(model: @diary, local: true, class: "space-y-4") do |form| %>
  <div class="field">
    <%= form.label :date, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.date_field :date, class: "mt-1 block rounded-md border-black shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50 bg-transparent" %>
  </div>

  <div class="field">
    <%= form.label :content, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.text_area :content, rows: 10, class: "mt-1 block w-full rounded-md border-black shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50 bg-transparent" %>
  </div>

  <div class="actions">
    <%= form.submit "Create Diary", class: "px-4 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-opacity-50" %>
  </div>
<% end %>